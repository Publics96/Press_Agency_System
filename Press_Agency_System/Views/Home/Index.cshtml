            @foreach(var i in Model.posts)
            {
                <div class="col-md-4 blog-item card">

                    <div class="blog-img">
                        <img src="~/Content/Posts Images/@i.ImagePath" alt="">
                        <span class="span_views"><i class="fas fa-eye" style="margin-right:5px;"></i><span id="numberofviews">@Model.views[i.Id]</span> </span>
                        <span class="badge blog-category">
                            @i.PostType
                        </span>
                        <span class="save-blog"><i id="btn-save-blog" class="fas fa-bookmark"></i></span>
                    </div>
                    <div class="blog-interaction">
                        <div class="editor-data">
                            <img class="editor-img" src="~/Content/Persons Images/@i.User.PhotoPath" />
                            <p class="editor-name">@i.User.FirstName @i.User.LastName</p>
                        </div>

                    </div>
                    <span class="text-date"><i class="fas fa-clock"></i>  @i.PostDate.ToString("dd MMMM yyyy HH:mm")</span>
                    <div class="blog-text">
                        <p>@i.PostTitle</p>

                    </div>
                </div>
            }


            
    </div>
</section>


