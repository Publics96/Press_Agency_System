@model Press_Agency_System.Models.Post

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    @using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            <div class="row" style="padding: 40px;">
                <div class="col-sm-4">
                    <img for="file" id="OpenImgUpload" src='~/Content/Posts Images/@Html.DisplayFor(model=>model.ImagePath)' width="100%" height="300px">
                    <input type="file" id="file" onchange="loadFile(event)" style="display:none" name="UploadedImage" />
                    @Html.TextBoxFor(model => model.ImagePath, new { @style = "display:none;" })
                    <div class="inputs" style="padding:16px;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PostTitle, new { @class = "control-label" })
                            <div class="">

                                @Html.TextAreaFor(model => model.PostTitle, new { @class = "form-control", @style = "max-width:100%; resize:none", @rows = "2" })
                                @Html.ValidationMessageFor(model => model.PostTitle)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PostType, new { @class = "control-label" })
                            <div class="">
                                <select class="form-control" id="dropDownListForCategories" style="max-width:100%;margin-bottom:5px;">
                                    @foreach (var i in ViewBag.PostCategories)
                                    {
                                        <option>@i</option>
                                    }
                                </select>
                                @Html.TextBoxFor(model => model.PostType, new { @class = "form-control", @style = "max-width:100%; display:none;", @id = "textboxforcategory" })
                                @Html.ValidationMessageFor(model => model.PostType)
                            </div>

                        </div>
                    </div>

                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.PostBody, new { @class = "form-control", @id = "PostBody", @style = "min-height:600px" })
                            @Html.ValidationMessageFor(model => model.PostBody)
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <div class="col-sm-4" style="text-align:center; padding-right:30px; margin-bottom:30px;">
            <input type="submit" value="Save" class="btn btn-success" style="width:40%;" />
            @Html.ActionLink("Delete", "Delete", new { Id = @Model.Id }, new { @class = "btn btn-danger", @style = "width:40%;" })
        </div>




    }

    <div class="col-sm-4">
        @Html.ActionLink("Back to List", "Index", null, new { @style = "font-size:20px;" })
    </div>

    @section Scripts {

        <script src="~/Scripts/CreateAndEditPosts.js"></script>


        @Scripts.Render("~/bundles/jqueryval")
    }
