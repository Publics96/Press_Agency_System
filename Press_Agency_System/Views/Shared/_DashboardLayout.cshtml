<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/footer-Dashboard-style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <title>@ViewBag.Title - Press Agency</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Press Agency", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "Index", "Home")</li>
                    <li>@Html.ActionLink("User Page", "About", "Home")</li>
                    <li>@Html.ActionLink("Post Page", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Post Request", "Moderation", "Post")</li>
                    <li>@Html.ActionLink("Messages", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer class="footer1" style=" width: 100%; bottom: 0; height:93px; margin-bottom:0px" class="">
        <div class="container" style="padding: 15px 0;" align="center">
            <a href="#" style="        margin: 10px;">
                <i class="fa fa-facebook fa-lg white-text mr-md-5 mr-3 fa-x"></i>
            </a>
            <a href="#" style="        margin: 10px;">
                <i class="fa fa-twitter fa-lg white-text mr-md-5 mr-3 fa-x"></i>
            </a>
            <a href="#" style="        margin: 10px;">
                <i class="fa fa-google-plus fa-lg white-text mr-md-5 mr-3 fa-x"></i>
            </a>
            <a href="#" style="        margin: 10px;">
                <i class="fa fa-linkedin fa-lg white-text mr-md-5 mr-3 fa-x"></i>
            </a>
            <a href="#" style="        margin: 10px;">
                <i class="fa fa-instagram fa-lg white-text mr-md-5 mr-3 fa-x"></i>
            </a>
            <a href="#" style="margin:10px;">
                <i class="fa fa-pinterest fa-lg white-text"></i>
            </a>
        </div>
        <div class="bg-dark" @*style="background: #004872;"*@>
            <p style="color: #91BEC2; padding: 15px 0;" align="center">
                &copy; @DateTime.Now.Year Copyright: <a href="#">Created By: 5M Team</a>
            </p>
        </div>
    </footer>
    <!-- Footer -->



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
