<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/footer-style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />

    <title>@ViewBag.Title - Press Agency</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")




    <style>
        @@import url(http://fonts.googleapis.com/css?family=Lato);


        .side-bar {
            background: #74AFAD;
            position: absolute;
            height: 100%;
            width: 200px;
            color: #fff;
            transition: margin-left 0.5s;
        }

            .side-bar ul {
                list-style: none;
                padding: 0px;
            }

                .side-bar ul li.menu-head {
                    font-family: 'Lato', sans-serif;
                    padding: 20px;
                }


                    .side-bar ul li.menu-head a {
                        color: #fff;
                        text-decoration: none;
                        height: 50px;
                    }


                .side-bar ul .menu-head a {
                    color: #fff;
                    text-decoration: none;
                    height: 50px;
                }

                .side-bar ul .menu li a {
                    color: #fff;
                    text-decoration: none;
                    display: inline-table;
                    width: 100%;
                    padding-left: 20px;
                    padding-right: 20px;
                    padding-top: 10px;
                    padding-bottom: 10px;
                }

                    .side-bar ul .menu li a:hover {
                        border-left: 3px solid #ECECEA;
                        padding-left: 17px;
                    }

                    .side-bar ul .menu li a.active {
                        padding-left: 17px;
                        background: #D9853B;
                        border-left: 3px solid #ECECEA;
                    }

                        .side-bar ul .menu li a.active:before {
                            content: "";
                            position: absolute;
                            width: 0;
                            height: 0;
                            border-top: 20px solid transparent;
                            border-bottom: 20px solid transparent;
                            border-left: 7px solid #D9853B;
                            margin-top: -10px;
                            margin-left: 180px;
                        }


        .content {
            padding-left: 200px;
            transition: padding-left 0.5s;
        }

        .active > .side-bar {
            margin-left: -150px;
            transition: margin-left 0.5s;
        }

        .active > .content {
            padding-left: 50px;
            transition: padding-left 0.5s;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Press Agency", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>



    <div class="wrapper" id="content-wrapper">
        <!-- Sidebar -->
        <div class="side-bar">
            <ul>
                <li class="menu-head">
                    Press Agency <a href="#" class="push_menu" id="pushmenu" onclick="toggleSideBar()"><span class="glyphicon glyphicon-align-justify pull-right"></span></a>
                </li>
                <div class="menu">
                    <li>
                        @if (HttpContext.Current.Request.Url.AbsolutePath == "Editor/Profile")
                        {
                            <a href="#" class="active">Profile <span class="glyphicon glyphicon-user pull-right"></span></a>
                        }
                        else
                        {
                            <a href="#">Profile <span class="glyphicon glyphicon-user pull-right"></span></a>
                        }

                    </li>
                    <li>
                        @if (HttpContext.Current.Request.Url.AbsolutePath == "/Post/Create")
                        {
                            <a href="@Url.Action("Create","Post")" class="active">Create New Post <span class="glyphicon glyphicon-plus-sign pull-right"></span></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Create","Post")">Create New Post <span class="glyphicon glyphicon-plus-sign pull-right"></span></a>
                            
                        }

                    </li>
                    <li>
                        @if (HttpContext.Current.Request.Url.AbsolutePath == "/Post")
                        {
                            <a href="@Url.Action("Index","Post")" class="active">My Posts <span class="glyphicon glyphicon-paperclip pull-right"></span></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index","Post")">My Posts <span class="glyphicon glyphicon-paperclip pull-right"></span></a>
                        }

                    </li>
                    <li>
                        @if (HttpContext.Current.Request.Url.AbsolutePath == "Post/Questions")
                        {
                            <a href="#" class="active">Received Questions <span class="glyphicon glyphicon-question-sign pull-right"></span></a>
                        }
                        else
                        {
                            <a href="#">Received Questions <span class="glyphicon glyphicon-question-sign pull-right"></span></a>
                        }

                    </li>
                </div>

            </ul>
        </div>
        <!--/Sidebar-->
        <!-- Page Content -->
        <div class="content" style="margin-left:10px;">
            @RenderBody()
        </div>
    </div>


    <script>
        function toggleSideBar() {
            var element = document.getElementById("content-wrapper");
            element.classList.toggle("active");
        }
    </script>


    <!-- Footer -->
    <footer>
        <center><p>&copy; @DateTime.Now.Year - 5M Team</p></center>
    </footer>
    <!-- /Footer -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
